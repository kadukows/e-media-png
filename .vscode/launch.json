    "version": "0.2.0",
    "configurations": [
        {
            "name": "main.py encrypt",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "encrypt",
                "-pk",
                "public.rsa",
                "-i",
                "linux.png",
                "-o",
                "out.png"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "main.py decrypt",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "decrypt",
                "-pk",
                "private.rsa",
                "-i",
                "out.png",
                "-o",
                "linux_dec.png"
            ],
            "console": "integratedTerminal"
        }
    ]
}
